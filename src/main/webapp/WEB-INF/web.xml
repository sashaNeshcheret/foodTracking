<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ServletDistapcher</servlet-name>
        <servlet-class>ua.trackingFood.servlet.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDistapcher</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletDistapcher1</servlet-name>
        <servlet-class>ua.trackingFood.servlet.Servlet1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDistapcher1</servlet-name>
        <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>JDBC Connection Pool</description>
        <res-ref-name>jdbc/tracking_food</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
    </resource-ref>



</web-app>
